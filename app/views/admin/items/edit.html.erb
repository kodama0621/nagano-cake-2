<div class="container">
  <div class="row">
    <div class="col-md-8">
      <h3 class= "mb-3">商品編集</h3>
      <%= form_for @item, url: admin_item_path, method: :patch do |f| %>
        <table class= "table table-borderless">
          <tr>
            <th>商品画像</th>
            <td><%= f.attachment_field :image %></td>
          </tr>
          <tr>
            <th>商品名</th>
            <td><%= f.text_field :name, class: "form-control" %></td>
          </tr>
          <tr>
            <th>商品説明</th>
            <td><%= f.text_area :explanation, class: "form-control" %></td>
          </tr>
          <tr>
            <th>ジャンル</th>
            <td><%= f.collection_select(:genre_id, @genres, :id, :name, {prompt: "-- 選択してください --"}, {class: "form-control"}) %></td>
          </tr>
          <tr>
            <th>税抜価格</th>
            <td><%= f.text_field :price, class: "form-control" %></td>
          </tr>
          <tr>
            <th>販売ステータス</th>
            <td>
              <%= f.radio_button :is_active, false, checked: true %>
              <%= f.label :is_active_false, "販売中" %>
              <%= f.radio_button :is_active, true, checked: false %>
              <%= f.label :is_active_true, "販売停止中" %>
            </td>
          </tr>
        </table>
        <div class= "text-center">
          <%= f.submit :"変更を保存", class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>