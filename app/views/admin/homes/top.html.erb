<div class="container">
  <div class="row">
    <div class="col-md">
      <h3>注文履歴一覧</h3>
      <table class= "table">
        <tr>
          <th>購入日時</th>
          <th>購入者</th>
          <th>注文個数</th>
          <th>注文ステータス</th>
        </tr>
        <% @customer.orders.each do |order| %>
        <tr>
          <td>
            <%= link_to admin_order_path(order), class: "text-primary" do %>
              <%= l order.created_at %>
            <% end %>
          </td>
          <td><%= "#{order.customer.first_name}#{order.customer.last_name}" %></td>
          <td><%= order.order_details.count%></td>
          <td><%= order.order_status %></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>