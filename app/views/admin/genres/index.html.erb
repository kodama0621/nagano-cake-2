<div class="container">
  <div class="row">
    <div class="col-md">
      <h3>ジャンル一覧/追加</h3>
      <%= form_with model: @genre, url: admin_genres_path, method: :post do |f| %>
      <table>
        <tr>
          <th>ジャンル名</th>
          <td>
            <div class= "form-group pt-3 ml-5 form-inline">
              <%= f.text_field :name, class: "form-control" %>
              <%= f.submit :"新規登録", class: "btn btn-success ml-5" %>
            </div>
          </td>
        </tr>
      </table>
      <% end %>
      <table class= "table">
        <tr>
          <th>ジャンル</th>
          <td></td>
        </tr>
        <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.name %></td>
          <td><%= link_to "編集する", edit_admin_genre_path(genre), class: "btn btn-success" %></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>