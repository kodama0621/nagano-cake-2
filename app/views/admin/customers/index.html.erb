<div class="container">
  <div class="row">
    <div class="col-md">
      <h3>会員一覧</h3>
      <table class= "table">
        <tr>
          <th>会員id</th>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th>会員ステータス</th>
        </tr>
        <% @customers.each do |customer| %>
        <tr>
            <td><%= customer.id %></td>
            <td>
              <%= link_to admin_customer_path(end_user), class: "text-primary" do %>
                <%= customer.first_name %><%= customer.last_name %>
              <% end %>
            </td>
            <td><%= customer.email %></td>
            <% if customer.is_vaild == false %>
              <td class= "text-success">有効</td>
            <% else %>
              <td>退会済み</td>
            <% end %>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>