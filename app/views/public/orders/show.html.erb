<div class="container">
  <div class="row">
    <div class="col-md">
      <h3 class= "mb-3">注文履歴詳細</h3>
    </div>
  </div>
  <div class="row">
    <div class="col-md-8">
      <h4>注文情報</h4>
      <table class= "table table-bordered">
        <tr>
          <th class= "table-active">注文日</th>
          <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
        </tr>
        <tr>
          <th class="table-active">配送先</th>
          <td><%= @order.address %></td>
        </tr>
        <tr>
          <th class= "table-active">支払い方法</th>
          <td><%= @order.payment_method %></td>
        </tr>
        <tr>
          <th class= "table-active">ステータス</th>
          <td><%= @order.order_status %></td>
        </tr>
      </table>p
    </div>
    <div class="col-md-4">
      <h4>請求情報</h4>
      <table class= "table table-bordered">
        <tr>
          <th class= "table-active">商品合計</th>
          <td><%= @order.total_price.to_s(:delimited) %></td>
        </tr>
        <tr>
          <th class= "table-active">配送料</th>
          <td><%= @order.postage %></td>
        </tr>
        <tr>
          <th class= "table-active">ご請求額</th>
          <td><%= billing_customer(@order).to_s(:delimited) %></td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-md">
      <h4>注文内容</h4>
      <table class= "table table-bordered">
        <tr class= "thead-light">
          <th>商品</th>
          <th>単価(税込)</th>
          <th>個数</th>
          <th>小計</th>
        </tr>
        <% @order.order_details.each do |order_detail| %>
        <tr>
          <td><%= order_detail.item.name %></td>
          <td><%= order_detail.item.price.to_s(:delimited) %></td>
          <td><%= order_detail.amount %></td>
          <td><%= sub_price(order_detail).to_s(:delimited) %></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>