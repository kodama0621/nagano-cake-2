<div class="container">
  <div class="row">
    <div class="col-md">
      <h3>配送先編集</h3>
      <%= form_with model: @address, url: address_path, method: :patch do |f| %>
        <table>
          <tr>
            <th>郵便番号(ハイフンなし)</th>
            <td><%= f.text_field :postal_code, class: "form-control" %></td>
          </tr>
          <tr>
            <th>住所</th>
            <td><%= f.text_field :address, class: "form-control" %></td>
          </tr>
          <tr>
            <th>宛名</th>
            <td><%= f.text_field :name, class: "form-control" %></td>
          </tr>
          <tr>
            <th></th>
            <td><%= f.submit :"変更内容を保存", class: "btn btn-success mt-3" %></td>
          </tr>
        </table>
      <% end %>
    </div>
  </div>
</div>