<div class="container">
  <div class="row">
    <div class="col-md">
      <h2 class= "mt-3">Sign up</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "customer/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :名前（姓） %><br />
          <%= f.text_field :first_name, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :名前（名） %><br />
          <%= f.text_field :last_name, autofocus: true, autocomplete: "email" %>
        </div>

          <div class="field">
          <%= f.label :名前（セイ） %><br />
          <%= f.text_field :kana_first_name, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :名前（メイ） %><br />
          <%= f.text_field :kana_last_name, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :メールアドレス %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :郵便番号 %><br />
          <%= f.text_field :postal_code, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :住所 %><br />
          <%= f.text_field :address, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :電話番号 %><br />
          <%= f.text_field :phone_number, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>

        <div class="actions">
          <%= f.submit "新規登録" %>
        </div>
      <% end %>

      <%= render "customers/shared/links" %>
    </div>
  </div>
</div>